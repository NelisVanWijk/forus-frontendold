extends ../layout/layout
block content
    .header-splash: .splash.splash-c
    
    header.section.section-header.section-header-landing-2: .wrapper
        include ../layout/includes/navbar
        
        .header-body
            .header-content
                .header-title Meld u aan als winkelier of dienstverlener
                .header-description Bereik meer klanten, maak meer winst en draag bij aan een maatschappelijk doel.
                .header-title Digitale identiteit
                .header-description Om uw organisatie toe te voegen dient u eerst een digitale indentiteit aan te maken
                a(href="#").button.button-primary Nieuwe Identiteit Aanmaken
            .header-content
                .block.block-voucher
                    .voucher-title Kindpakket
                    .voucher-subtitle Valid 2 days
                    .voucher-value â‚¬ 456,66
                    .voucher-qr-code: .voucher-qr-code_inner: img(src="./assets/img/qr-code.svg")
            .block.block-cards
                .card-item: .card-item-inner
                    .card-icon: img(src="./assets/img/icon-cards/icon-card-money.png")
                    .card-content
                        .card-title 
                            | Create your fund 
                            em.mdi.mdi-arrow-right
